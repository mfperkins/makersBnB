extends layout

block content

  div(class="row")
    div(class="col-sm-3")
    div(class="col-sm-6")
      h2 Create your account
      hr
      form(class="form-horizontal", action='/users', method='post')
        div(class="form-group")
          label(for='email' class="col-sm-4 control-label") Email:
          div(class="col-sm-8")
            input(type='email', class="form-control", placeholder="you@example.com", name='email')
        div(class="form-group")
          label(for='password' class="col-sm-4 control-label") Password:
          div(class="col-sm-8")
            input(type='password', class="form-control", name='password')
        div(class="form-group")
          label(for='password_confirmation' class="col-sm-4 control-label") Confirm Password:
          div(class="col-sm-8")
            input(type='password', class="form-control", name='password_confirmation')
        div(class="form-group")
          div(class="col-sm-offset-4 col-sm-8")
            button(type="submit" class="btn btn-success") Sign up
    div(class="col-sm-3")
